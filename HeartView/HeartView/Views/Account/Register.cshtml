@using System.Web.Mvc.Html
@model HeartView.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<html>
<head>
    <meta charset="UTF-8">
    <title>HealthView</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/Content/Custom/normalize.css">

    <link rel="stylesheet" href="~/Content/Custom/styleLogin.css">

</head>

<body>
    <div class="form">
        <ul class="tab-group">
            <li class="tab active"><a href="#signup">Sign Up</a></li>
            <li class="tab"><a onclick="location.href='@Url.Action("Login","Account")'">Log In</a></li>
        </ul>
        <div class="tab-content">
            <h1>Register</h1>
            <<section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    //<div class="top-row">
                    <div class="field-wrap">
                        <label>
                            Bagde Code<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.BadgeCode, new { @class = "form-control" })
                    </div>

                        <div class="field-wrap">
                            <label>
                                Email<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    //</div>
                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>


                        <div class="field-wrap">
                            <label>
                                Confirm Password<span class="req">*</span>
                            </label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                       
                        <input type="hidden" name="IDDoctor" id="idDoctor" value="@ViewBag.IDDoctor" />
                        <button type="submit" class="button button-block" >Register</button>
                }
            </section>
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Scripts/Custom/loginPage.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
